{
  "name": "wgf-support-shell",
  "version": "1.0.0",
  "description": "Outil CLI de support WeGetFunded — connexion BDD simplifiée",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/wgf-support.cjs --banner:js=\"#!/usr/bin/env node\""
  },
  "bin": {
    "wgf-support": "./dist/wgf-support.cjs"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "dotenv": "^16.4.7",
    "inquirer": "^12.3.2",
    "mysql2": "^3.11.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "esbuild": "^0.27.3",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
